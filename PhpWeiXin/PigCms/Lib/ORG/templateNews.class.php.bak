// Get Data.data
	public function getData($keys,$dataArr,$color){

		$data = array_flip($keys);
        $jsonData='';
		foreach($dataArr as $k => $v){
			if(in_array($k,array_flip($data))){
				$jsonData .= '"'.$k.'":{"value":"'.$v.'","color":"'.$color.'"},';
			}
		}
		$jsonData = rtrim($jsonData,',');
		return "{".$jsonData."}"; 
	}

	
